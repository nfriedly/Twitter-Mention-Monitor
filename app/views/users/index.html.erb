<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Oauth token</th>
    <th>Oauth secret</th>
    <th>Last mention</th>
    <th>Is admin</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.username %></td>
    <td><%=h user.oauth_token[0..5] + "..." %></td>
    <td><%=h user.oauth_secret[0..5] + "..."  %></td>
    <td><%=h user.last_mention_id %></td>
    <td><%=h user.is_admin %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>